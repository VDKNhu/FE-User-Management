{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./out-tsc/spec",
    "module": "CommonJs",
    "moduleResolution": "node",
    "types": [
      "jest",
      "jsdom",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "**/*.d.ts",
    "src/**/*.unit-test.helper.ts"
  ]
}